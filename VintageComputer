public class VintageComputer
{

/* create a class that defines attributes for 8 and 16 bit computers. Variables include Brand, Bit Count, Processor, Disk Drive.
    More to possibly be added later. */ 
    
    //variables
    private String brand;
    private int bitCount;
    private String processor;
    private String diskDrive;
    
    //check for brand
    
    
    //check for bits
    public void checkBits(int bits)
      {
      bitCount = bits;
      if(bitCount = 16)
        {
        System.out.println("You have a 16-bit system. It could be a Commodore Amiga or an Atari ST.");
        }
       elif(bitCount = 8)
        {
        System.out.println("You have an 8-bit system. It could be an Atari 400/800/600, or an MSX, or a Commodore 64, or even a ZX Spectrum!");
        }
       else
        {
        System.out.println("That value is not within the scope of this application.");
        }
       }
       
 
